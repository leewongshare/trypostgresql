  </tr>

<% @dudes.each do |dude| %>
  <tr>
    <td><%= dude.name %></td>
    <td><%= dude.photo %></td>
    <td><%= link_to 'Show', dude %></td>
    <td><%= link_to 'Edit', edit_dude_path(dude) %></td>
    <td><%= link_to 'Destroy', dude, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

